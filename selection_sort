void swap(int i, int min, int arr[])
{
	int temp = arr[i];
	arr[i] = arr[min];
	arr[min] = temp;
}

int* selection_sort(int arr[],int n)
{
	for (int i = 0; i < n - 1; i++)
	{
		int min = i;
		for (int j = i + 1; j < n; j++)
		{
			if (arr[j] < arr[min])
				min = j;
		}
		if (min != i)
			swap(i, min,arr);
	}

	return arr;
}
